@model IEnumerable<WAMVC.Models.PedidoModel>

@{
    ViewData["Title"] = "Lista de Pedidos";
    var esAdmin = User.IsInRole("Admin");
    var esEmpleado = User.IsInRole("Empleado");
    var puedeGestionar = esAdmin || esEmpleado;
}

<h1>Lista de Pedidos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (puedeGestionar)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Pedido
        </a>
    </p>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Número</th>
                    <th>@Html.DisplayNameFor(model => model.Cliente.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaPedido)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaPedido)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            @if (puedeGestionar)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No hay pedidos registrados</h4>
        <p>
            Aún no has creado ningún pedido. 
            @if (puedeGestionar)
            {
                <a asp-action="Create" class="alert-link">Haz clic aquí para crear tu primer pedido</a>
            }
        </p>
    </div>
}