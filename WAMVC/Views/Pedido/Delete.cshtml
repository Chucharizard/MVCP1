@model WAMVC.Models.PedidoModel

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h1>Eliminar Pedido</h1>

<h3>¿Está seguro que desea eliminar este pedido?</h3>
<div class="alert alert-warning">
    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-header">
        <h4>Pedido #@Model.Id</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Cliente.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cliente.Nombre)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FechaPedido)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaPedido)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.MontoTotal)
            </dt>
            <dd class="col-sm-9">
                <strong class="text-success">@Html.DisplayFor(model => model.MontoTotal)</strong>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar Pedido" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>