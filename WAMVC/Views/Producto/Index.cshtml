@model IEnumerable<WAMVC.Models.ProductoModel>

@{
    ViewData["Title"] = "Lista de Productos";
    var esAdmin = User.IsInRole("Admin");
}

<h1>Lista de Productos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@* Solo Admin puede crear productos *@
@if (esAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
    </p>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.Stock)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                        <td>
                            @* Solo Admin puede editar y eliminar *@
                            @if (esAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                            }
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            @if (esAdmin)
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No hay productos registrados</h4>
        @if (esAdmin)
        {
            <p>Aún no has creado ningún producto. <a asp-action="Create" class="alert-link">Haz clic aquí para crear tu primer producto</a>.</p>
        }
        else
        {
            <p>No hay productos disponibles en este momento.</p>
        }
    </div>
}
