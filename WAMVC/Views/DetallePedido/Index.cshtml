@model IEnumerable<WAMVC.Models.DetallePedidoModel>

@{
    ViewData["Title"] = "Gestión de Detalles de Pedidos";
    var esAdmin = User.IsInRole("Admin");
    var esEmpleado = User.IsInRole("Empleado");
    var puedeGestionar = esAdmin || esEmpleado;
}

<h1>Gestión de Detalles de Pedidos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    @if (puedeGestionar)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar Nuevo Detalle
        </a>
    }
    <a asp-controller="Pedido" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-list"></i> Ver Pedidos
    </a>
</p>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Pedido #</th>
                    <th>Cliente</th>
                    <th>@Html.DisplayNameFor(model => model.Producto.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                    <th>@Html.DisplayNameFor(model => model.PrecioUnitario)</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Pedido" asp-action="Details" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-primary">
                                #@Html.DisplayFor(modelItem => item.IdPedido)
                            </a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Pedido!.Cliente!.Nombre)</td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.Producto!.Nombre)</strong>
                            @if (!string.IsNullOrEmpty(item.Producto?.Descripcion))
                            {
                                <br><small class="text-muted">@item.Producto.Descripcion</small>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Cantidad)</span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.PrecioUnitario)</td>
                        <td>
                            <strong class="text-success">@((item.Cantidad * item.PrecioUnitario).ToString("C"))</strong>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (puedeGestionar)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Resumen General</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total de detalles:</strong> @Model.Count()</p>
                    <p><strong>Valor total de todos los detalles:</strong> <span class="text-success">@Model.Sum(d => d.Cantidad * d.PrecioUnitario).ToString("C")</span></p>
                    <p><strong>Artículos totales:</strong> @Model.Sum(d => d.Cantidad) unidades</p>
                    <p><strong>Pedidos únicos:</strong> @Model.Select(d => d.IdPedido).Distinct().Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Top Productos</h5>
                </div>
                <div class="card-body">
                    @{
                        var topProductos = Model.GroupBy(d => d.Producto!.Nombre)
                                               .OrderByDescending(g => g.Sum(d => d.Cantidad))
                                               .Take(3);
                    }
                    @foreach (var grupo in topProductos)
                    {
                        <p><strong>@grupo.Key:</strong> @grupo.Sum(d => d.Cantidad) unidades vendidas</p>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No hay detalles de pedidos registrados</h4>
        <p>Comienza agregando artículos a los pedidos existentes.</p>
        <hr>
        <p class="mb-0">
            @if (puedeGestionar)
            {
                <a asp-action="Create" class="btn btn-primary">Agregar Primer Detalle</a>
            }
            <a asp-controller="Pedido" asp-action="Index" class="btn btn-outline-secondary">Ver Pedidos</a>
        </p>
    </div>
}